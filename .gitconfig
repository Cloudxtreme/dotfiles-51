[user]
    name = Corey Goldberg
    email = cgoldberg@gmail.com
[color]
    diff = auto
    status = auto
    branch = auto
[branch]
    autosetupmerge = true
    autosetuprebase = always
[push]
    default = simple
[alias]
    # open GitHub website for current repo
    open = !git config --get remote.origin.url | xargs xdg-open > /dev/null 2>&1
    # list commit counts ranked by contributor
    score = !git log | grep Author | sort | uniq -ci | sort -hr
    # list commits in short form, with colors and branch/tag annotations
    ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
    # list commits showing changed files
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    # reset to HEAD and clean untracked files
    blowaway = !git reset --hard HEAD && git clean -d -x --force
