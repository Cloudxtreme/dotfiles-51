[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[branch]
    autosetupmerge = always
    autosetuprebase = always

[push]
    default = simple

[diff]
    tool = colordiff

[difftool]
    prompt = false

[difftool "colordiff"]
    cmd = diff -y $LOCAL $REMOTE | expand | colordiff | less -rS

[alias]
    # list git aliases
    la = !git config --list | grep alias | cut -c 7- &

    # show status of local branch
    s = status

    # show repo information
    i = info

    # fetch changes from remote and rebase local branch
    up = !git fetch && git pull --rebase origin \"$(git rev-parse --abbrev-ref HEAD)\"

    # list local branches sorted by last modified
    br = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

    # commit changes with inline message
    ci = !git commit -a -m $2

    # show pretty log
    ls = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'

    # reset local branch to HEAD and delete untracked files
    blowaway = !git reset --hard HEAD && git clean -d -x --force

[filter "lfs"]
    smudge = git-lfs smudge %f
    required = true
    clean = git-lfs clean %f

    
